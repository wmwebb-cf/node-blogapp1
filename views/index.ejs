<% include partials/header %>

<div class="ui main text container"><!-- Makes content centered-->
    <div class="ui centered huge header">RESTful Blog App</div>
    <div class="ui top attached"><!--gives you the line thingy around the element-->
        <div class="ui divided items"><!--puts a line between items to divide them-->
            <% blogs.forEach(function(blog){ %>
                <div class="blogs ui divided raised segment">
                    <div class="blogPost picture">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="blogPost article">
                        <h2><a href="/blogs/<%= blog._id %>"><%= blog.title %></h2></a>
                        <h4><%- blog.body.substring(0, 100) %>...</h4>
                        <p><%= blog.created.toDateString() %></p>
                        <a href="/blogs/<%= blog._id %>" class="ui black basic tiny button">Read More<i class="right chevron icon"></i></a><!--blog._id comes from the function-->
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    

</div><!--ui main text container-->

<% include partials/footer %>